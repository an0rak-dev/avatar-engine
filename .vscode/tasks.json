{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build",
            "dependsOn": "Compile",
            "command": "lib.exe",
            "args": [
                "/nologo",
                "/out:${workspaceFolder}\\Bin\\avatar-engine.lib",
                "*.obj"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\Bin"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the Avatar Engine core static library."
        },
        {
            "type": "cppbuild",
            "label": "Compile",
            "dependsOn": "Prepare",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/FC",
                "/nologo",
                "/c",
                "/DUNICODE",
                "/I${workspaceFolder}\\includes",
                "${workspaceFolder}\\src\\*.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\Bin"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Compile all the sources of the Avatar Engine core module."
        },
        {
            "type":"shell",
            "label": "Format",
            "windows":{
              "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Preview\\VC\\Tools\\Llvm\\bin\\clang-format.exe",
              "args": [
                  "--Werror",
                  "-i",
                  "--ferror-limit=0",
                  "--style=file:${workspaceFolder}\\misc\\.clang-format",
                  "${workspaceFolder}\\includes\\avatar\\core\\*.hpp",
                  "${workspaceFolder}\\includes\\avatar\\interfaces\\*.hpp",
                  "${workspaceFolder}\\includes\\avatar\\platforms\\*.hpp",
                  "${workspaceFolder}\\includes\\avatar\\renderers\\*.hpp",
                  "${workspaceFolder}\\src\\*.cpp"
              ]
            },
        },
        {
            "type":"shell",
            "label": "Lint",
            "windows":{
              "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Preview\\VC\\Tools\\Llvm\\bin\\clang-tidy.exe",
              "args": [
                  "--config-file=${workspaceFolder}\\misc\\.clang-tidy",
                  "${workspaceFolder}\\src\\*.cpp",
                  "--",
                  "-I${workspaceFolder}\\includes",
                  "-DUNICODE",
              ]
            },
        },
        {
          "type":"shell",
          "label": "Prepare",
          "windows":{
            "command": "cmd.exe",
            "args": [
                "/C",
                "${workspaceFolder}\\.vscode\\prepare.bat"
            ]
          },
        }
    ],
    "version": "2.0.0"
}